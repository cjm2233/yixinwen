<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.cjm.test2.MainActivity">

    <com.cjm.test2.ui.TitleBar
        android:id="@+id/main_tb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tBackgroundColor="@color/colorWhite"
        app:tCenterTitle="true"
        app:tMenuImage="@mipmap/ic_memu"
        app:tTitleText="标题栏"
        app:tTitleTextColor="@color/colorText1"
        app:tTitleTextSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#bfbfbf" />

    <android.support.v4.view.ViewPager
        android:id="@+id/main_vg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <android.support.design.widget.TabLayout
        android:id="@+id/main_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        app:tabIndicatorHeight="0dp" />
</LinearLayout>
